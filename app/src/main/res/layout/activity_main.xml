<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <!--Header-->
    <TextView
        android:id="@+id/Assignment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/assignment1"
        android:gravity="start"
        android:background="@color/Salmon"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:minHeight="70dp"
        android:paddingVertical="20dp"

        />

    <!--result-->
    <TextView

        android:id="@+id/shownumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="start"
        android:text=""
        android:minHeight="40dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:textSize="20sp"
        android:visibility="visible"
         />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"

    >

    <!--First line of buttons-->
    <LinearLayout
        android:id="@+id/firstlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"

        >

        <Button
            android:id="@+id/Number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            tools:ignore="TouchTargetSizeCheck"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/Number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_2"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/Number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_3"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/add"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>


    <!--Second line of buttons-->
    <LinearLayout
        android:id="@+id/secondlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/Number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_4"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:layout_marginStart="25dp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/Number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_5"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/Number6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_6"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/subbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/Sub"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <!--Third line of buttons-->
    <LinearLayout
        android:id="@+id/thirdlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >
        <!--First line of buttons-->
        <Button
            android:id="@+id/Number7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_7"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:layout_marginStart="25dp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/Number8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_8"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/Number9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_9"
            android:textColor="#6D4C41"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/timesbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/Times"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>


    <!--Fourth line of buttons-->
    <LinearLayout
        android:id="@+id/fourthlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >
        <!--First line of buttons-->
        <Button
            android:id="@+id/clearbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/clear"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:layout_marginStart="25dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/Number0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/_0"
            android:textColor="#6D4C41"
            android:textSize="@dimen/buttontextsize"
            tools:ignore="TextContrastCheck"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/equalbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/Equals"
            android:textColor="#6D4C41"
            android:textSize="@dimen/buttontextsize"
            tools:ignore="TouchTargetSizeCheck"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/divisionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="@string/Div"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>


</LinearLayout>
    <!--History button-->

<Button
   android:id="@+id/StdNoHistory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/standar_no_history"
    android:layout_gravity="center"
    android:backgroundTint="@color/DimGray"
    android:visibility="gone"


    />
    <Button
        android:id="@+id/AdvanceHistoryBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/AdvanceHistoryBut"
        android:layout_gravity="center"
        android:backgroundTint="@color/DimGray"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/HistoryView"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:background="@color/white"
        android:lines="15"
        android:scrollbars="vertical"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp"

        />






</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"




    >
    <!--Header-->
    <TextView
        android:id="@+id/Assignment1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment1"
        android:gravity="left"
        android:background="@color/Salmon"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:minHeight="70dp"
        android:paddingVertical="20dp"

        />

    <!--result-->
    <TextView

        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:hint="InputNumbers"
        android:minHeight="40dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:textSize="20sp"
        android:visibility="visible"
        tools:ignore="RtlCompat" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"

    >

    <!--First line of buttons-->
    <LinearLayout
        android:id="@+id/firstlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"

        >

        <Button
            android:id="@+id/Number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/Number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="2"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"

            />

        <Button
            android:id="@+id/Number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="3"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"

            />

        <Button
            android:id="@+id/addbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            />
    </LinearLayout>


    <!--Second line of buttons-->
    <LinearLayout
        android:id="@+id/secondlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/Number4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:layout_marginLeft="25dp"
            android:inputType="number"
            />
        <Button
            android:id="@+id/Number5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:inputType="number"
            />
        <Button
            android:id="@+id/Number6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="6"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            />
        <Button
            android:id="@+id/subbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            />

    </LinearLayout>

    <!--Third line of buttons-->
    <LinearLayout
        android:id="@+id/thirdlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >
        <!--First line of buttons-->
        <Button
            android:id="@+id/Number7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="7"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:layout_marginLeft="25dp"
            />
        <Button
            android:id="@+id/Number8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="8"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            />

        <Button
            android:id="@+id/Number9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="9"
            android:inputType="number"
            android:textColor="#6D4C41"
            android:textSize="@dimen/buttontextsize" />
        <Button
            android:id="@+id/timesbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            />

    </LinearLayout>


    <!--Fourth line of buttons-->
    <LinearLayout
        android:id="@+id/fourthlinebuttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="10dp"
        >
        <!--First line of buttons-->
        <Button
            android:id="@+id/clearbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            android:layout_marginLeft="25dp"
            />

        <Button
            android:id="@+id/Number0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="0"
            android:inputType="number"
            android:textColor="#6D4C41"
            android:textSize="@dimen/buttontextsize" />

        <Button
            android:id="@+id/equalbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="="
            android:textColor="#6D4C41"
            android:textSize="@dimen/buttontextsize"
            tools:ignore="TouchTargetSizeCheck" />
        <Button
            android:id="@+id/divisionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/Salmon"
            android:minHeight="@dimen/buttonheightsize"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="@dimen/buttontextsize"
            />

    </LinearLayout>


</LinearLayout>
    <!--History button-->
<Button
   android:id="@+id/StdNoHistory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Standar-No History"
    android:layout_gravity="center"
    android:backgroundTint="@color/DimGray"
    />



</LinearLayout>